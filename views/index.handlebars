 
      <div id="wrapper">

            <div class="jumbotron jumbotron-fluid">
              <div class="container">
                <h1 class="display-4 text-center">Mongo Scraper</h1>
                <p class="lead text-center">BBC News Science and Environment</p>
              </div>
            </div>
        <div class="container">
            <div class="col-md-12">
              {{#if article}}
                {{#each article}}
                {{!-- console.log(this.title); --}}
                  <div class="card">
                    <div class="card-header">
                      <h4>{{this.title}}</h4>
                    </div>
                    <div class="card-body">
                      <a href={{this.link}}>{{this.link}}</a>
                      <button type="button" class="btn btn-danger save float-right" id="save" data-id={{this._id}}>Save Article</button>
                    </div>
                  </div>
                  {{/each}}
                {{else}}
                <div class="card-body">
                  <h4 class="text-center">There are currently no articles to view.</h4>
                </div>
            </div>
            {{/if}}
        </div>
            <footer>
              <div class="card">
                <div class="card-body">

                </div>
              </div>
            </footer>
