        
        
        <div class="jumbotron jumbotron-fluid">
          <div class="container">
            <h1 class="display-4 text-center">Saved Articles</h1>
            <p class="lead text-center">BBC News Science and Environment</p>
          </div>
        </div>
        <div class="container">
            <div class="col-md-12">
              {{#if saved}}
                {{#each saved}}
                {{!-- console.log(this.title); --}}
                  <div class="card">
                    <div class="card-header">
                      <h4>{{this.title}}</h4>
                      <h4>{{this.id}}</h4>
                    </div>
                    <div class="card-body">
                      <a href={{this.link}}>{{this.link}}</a>
                      <button type="button" class="btn btn-outline-danger save" id="note" data-id={{this._id}}>Notes</button>
                      <button type="button" class="btn btn-danger save" id="delete" data-id={{this._id}}>Delete</button>
                    </div>
                  </div>
                  {{/each}}
                {{else}}
                <div class="card-body">
                  <h4 class="text-center">There are currently no articles to view.</h4>
                </div>
            </div>
            {{/if}}
        </div>